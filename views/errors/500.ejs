<%- include('../partials/header') %>

<main class="container mx-auto px-4 py-16">
    <div class="max-w-2xl mx-auto text-center">
        <div class="glass rounded-lg p-12">
            <h1 class="text-9xl font-bold text-primary mb-4">500</h1>
            <h2 class="text-3xl font-semibold text-gray-800 dark:text-white mb-6">Server Error</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-8">
                Oops! Something went wrong on our end. We're working to fix it.
            </p>

            <!-- Show technical error details -->
            <% if (errorMessage) { %>
                <p class="text-gray-500 dark:text-gray-400 text-sm">Error: <strong><%= errorMessage %></strong></p>
            <% } %>
            <p class="text-gray-500 dark:text-gray-400 text-sm">Timestamp: <%= new Date().toLocaleString() %></p>

            <div class="flex justify-center space-x-4 mt-4">
                <a href="/" class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-blue-600 transition-colors">
                    Go Home
                </a>
                <button onclick="history.back()" class="px-6 py-3 border text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
                    Go Back
                </button>
            </div>
        </div>
    </div>
</main>

<script src="/javascripts/error.js"></script>
<%- include('../partials/footer') %>

