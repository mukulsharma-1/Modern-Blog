<%- include('../partials/header') %>

<main class="container mx-auto px-4 py-6">
    <div class="max-w-md mx-auto">
        <section class="glass rounded-lg p-6">
            <h1 class="text-3xl font-bold text-center text-gray-800 dark:text-white">Create a Blog</h1>

            <% if (error) { %>
                <p class="text-red-500 text-center mt-2"><%= error %></p>
            <% } %>

            <form method="POST" action="/users/blogs/create" class="space-y-4">
                <div>
                    <label for="title" class="block text-gray-700 dark:text-gray-300 mb-2">Title</label>
                    <input type="text" id="title" name="title" required class="w-full px-4 py-2 rounded-lg border focus:ring-primary">
                </div>

                <div>
                    <label for="content" class="block text-gray-700 dark:text-gray-300 mb-2">Content</label>
                    <textarea id="content" name="content" required class="w-full px-4 py-2 rounded-lg border focus:ring-primary"></textarea>
                </div>

                <button type="submit" class="w-full px-6 py-3 bg-primary text-white rounded-lg hover:bg-blue-600">Publish Blog</button>
            </form>
        </section>
    </div>
</main>

<%- include('../partials/footer') %>
