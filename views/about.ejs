<%- include('partials/header') %>

<main class="container mx-auto px-4 py-8">
    <!-- About Hero Section -->
    <section class="glass rounded-lg p-8 mb-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 dark:text-white mb-4">
            About Us
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            We are a team of passionate developers and writers dedicated to sharing knowledge and insights about technology, development, and innovation.
        </p>
    </section>

    <!-- Mission Statement -->
    <section class="glass rounded-lg p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
            Our Mission
        </h2>
        <p class="text-gray-600 dark:text-gray-300">
            Our mission is to empower developers and technology enthusiasts with valuable insights, tutorials, and best practices. We believe in creating a community where knowledge is shared freely and innovation is celebrated.
        </p>
    </section>

    <!-- Team Section -->
    <section class="glass rounded-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">
            Meet Our Team
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Team Member 1 -->
            <div class="text-center">
                <div class="w-32 h-32 mx-auto mb-4 rounded-full overflow-hidden">
                    <img src="https://via.placeholder.com/150" alt="Team Member" class="w-full h-full object-cover">
                </div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">John Doe</h3>
                <p class="text-gray-600 dark:text-gray-300">Lead Developer</p>
            </div>

            <!-- Team Member 2 -->
            <div class="text-center">
                <div class="w-32 h-32 mx-auto mb-4 rounded-full overflow-hidden">
                    <img src="https://via.placeholder.com/150" alt="Team Member" class="w-full h-full object-cover">
                </div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Jane Smith</h3>
                <p class="text-gray-600 dark:text-gray-300">Content Writer</p>
            </div>

            <!-- Team Member 3 -->
            <div class="text-center">
                <div class="w-32 h-32 mx-auto mb-4 rounded-full overflow-hidden">
                    <img src="https://via.placeholder.com/150" alt="Team Member" class="w-full h-full object-cover">
                </div>
                <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Mike Johnson</h3>
                <p class="text-gray-600 dark:text-gray-300">UI/UX Designer</p>
            </div>
        </div>
    </section>

    <!-- Contact CTA -->
    <section class="glass rounded-lg p-8 mt-8 text-center">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
            Want to Connect?
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
            We'd love to hear from you! Reach out to us for collaborations, questions, or just to say hello.
        </p>
        <a href="/contact" class="inline-block px-6 py-3 bg-primary text-white rounded-lg hover:bg-blue-600 transition-colors">
            Contact Us
        </a>
    </section>
</main>

<%- include('partials/footer') %>

