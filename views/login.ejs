<%- include('partials/header') %>

<main class="container mx-auto px-4 py-12">
    <div class="max-w-md mx-auto">
        <!-- Login Form -->
        <section class="glass rounded-lg p-8">
            <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-6 text-center">Login</h1>
            
            <form id="loginForm" class="space-y-6" method="POST" action="/login">
                <div>
                    <label for="email" class="block text-gray-700 dark:text-gray-300 mb-2">Email</label>
                    <input type="email" id="email" name="email" required
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary">
                </div>
                
                <div>
                    <label for="password" class="block text-gray-700 dark:text-gray-300 mb-2">Password</label>
                    <input type="password" id="password" name="password" required
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary">
                </div>
                
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input type="checkbox" id="remember" name="remember"
                            class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded">
                        <label for="remember" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                            Remember me
                        </label>
                    </div>
                    <a href="#" class="text-sm text-primary hover:text-blue-600 dark:hover:text-blue-400">
                        Forgot password?
                    </a>
                </div>
                
                <button type="submit"
                    class="w-full px-6 py-3 bg-primary text-white rounded-lg hover:bg-blue-600 transition-colors">
                    Sign In
                </button>
            </form>
            
            <div class="mt-6 text-center">
                <p class="text-gray-600 dark:text-gray-300">
                    Don't have an account?
                    <a href="/register" class="text-primary hover:text-blue-600 dark:hover:text-blue-400">
                        Register here
                    </a>
                </p>
            </div>
        </section>

        <!-- Additional Info -->
        <section class="glass rounded-lg p-6 mt-6 text-center">
            <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Why Login?</h2>
            <ul class="space-y-3 text-gray-600 dark:text-gray-300">
                <li class="flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Access exclusive content
                </li>
                <li class="flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Save your favorite articles
                </li>
                <li class="flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Join the community
                </li>
            </ul>
        </section>
    </div>
</main>

<%- include('partials/footer') %>

<script src="/javascripts/script.js"></script> 